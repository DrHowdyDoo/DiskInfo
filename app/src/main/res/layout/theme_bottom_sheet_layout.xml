<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="34dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="contentDescription"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/app_colors"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:drawablePadding="4dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        app:drawableStartCompat="@drawable/ic_theme_large"
        app:drawableTint="?attr/colorPrimary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/theme_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:text="@string/themes"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/appTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:singleSelection="true">

        <Button
            android:id="@+id/theme_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto"
            style="@style/App.ToggleButtons.Small" />

        <Button
            android:id="@+id/theme_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light"
            style="@style/App.ToggleButtons.Small" />

        <Button
            android:id="@+id/theme_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark"
            style="@style/App.ToggleButtons.Small" />


    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView_amoledMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="32dp"
        style="?attr/materialCardViewFilledStyle"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:text="@string/amoled_mode"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtView_amoledMode_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_available_with_dynamic_colors"
                    android:alpha="0.5"
                    android:textAppearance="?attr/textAppearanceTitleSmall" />

            </LinearLayout>


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_amoledMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/txtView_dynamic_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dynamic_colors"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:layout_margin="16dp" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        app:singleSelection="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dynamic_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/on"
            app:icon="@drawable/ic_theme"
            style="@style/App.ToggleButtons.Small" />

        <Button
            android:id="@+id/dynamic_off"
            style="@style/App.ToggleButtons.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off"
            tools:ignore="TextContrastCheck" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

</LinearLayout>